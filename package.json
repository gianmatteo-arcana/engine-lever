{
  "name": "biz-buddy-backend",
  "version": "1.0.0",
  "description": "Agent-to-Agent and MCP service for Biz Buddy AI",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc --build",
    "dev": "tsx watch src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:fast": "jest --maxWorkers=4 --silent",
    "test:unit": "jest --testPathPattern=/__tests__/ --testPathIgnorePatterns=/integration/",
    "test:integration": "jest --testPathPattern=/integration/ --runInBand --verbose",
    "test:db": "tsx scripts/test-db-connection.ts",
    "test:e2e": "node e2e-real-orchestration-proof.js",
    "test:orchestration": "node e2e-real-orchestration-proof.js",
    "test:puppeteer": "node test-puppeteer-setup.js",
    "db:check": "tsx scripts/check-database.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "precommit": "npm run lint && npm run build && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@a2a-js/sdk": "^0.2.0",
    "@anthropic-ai/sdk": "^0.59.0",
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.6.2",
    "bull": "^4.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "openai": "^5.12.2",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.16.0",
    "yaml": "^2.8.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.54.0",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.19.9",
    "@types/node-cron": "^3.0.11",
    "@types/puppeteer": "^5.4.7",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eventsource": "^4.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "puppeteer": "^24.16.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "a2a",
    "agent-to-agent",
    "mcp",
    "background-jobs",
    "redis",
    "queue",
    "business",
    "ai",
    "railway"
  ],
  "author": "Biz Buddy Team",
  "license": "MIT"
}
